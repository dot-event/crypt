#!/usr/bin/env node

const dotEvent = require("dot-event").default
const dotStore = require("@dot-event/store").default
const dotTask = require("@dot-event/task").default

const dotEncrypt = require("../dist/encrypt").default

const events = dotEvent()
const store = dotStore({ events })

dotEncrypt({ events, store })
dotTask({ events, store })

events
  .task({
    argv: process.argv.slice(2),
    op: "encrypt",
    path: process.cwd(),
  })
  .catch(function(e) {
    console.error(e)
    process.exit(1)
  })
